# /etc/ntp.conf, configuration for ntpd
#
#############################################################################
#############################################################################
####   PUPPET MANAGED   #####################################################
#############################################################################
#############################################################################
logfile /var/log/ntpd
<% if @operatingsystem == "Solaris" %>
driftfile /etc/ntp.drift
<% else %>
driftfile /var/lib/ntp/ntp.drift
<% end %>

server <%= scope.lookupvar("ntp::ntp_server") %>
